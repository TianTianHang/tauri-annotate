{
  "$schema": "https://schema.tauri.app/config/1",
  "package": {
    "productName": "tauri-annotate",
    "version": "0.1.0"
  },
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devPath": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "distDir": "../dist"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "windows": [
      {
        "title": "tauri-annotate",
        "width": 800,
        "height": 600,
        "fileDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri-annotate.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}